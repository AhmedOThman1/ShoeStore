<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.ShowShoesListFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    LinearLayout is used because all views are above each other
     and the layout is very simple, so there is no need to use constraintLayout-->
        <LinearLayout
            android:id="@+id/shoes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <include layout="@layout/one_shoe_item" />-->

            <!--            <include layout="@layout/one_shoe_item" />-->

            <!--            <include layout="@layout/one_shoe_item" />-->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_new_shoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white" />
        </LinearLayout>

    </ScrollView>
</layout>